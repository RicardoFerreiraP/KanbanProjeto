        <TextBox HorizontalAlignment="Left" Height="195" Margin="40,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="310"/>
        <Label x:Name="lblDescricao" HorizontalAlignment="Left" Height="23" Margin="40,45,0,0"  Content="Descrição:" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="355,248,0,0" VerticalAlignment="Top" Width="75"/>
